<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Back"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/points"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="0 Dining Points"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/multiplierTitle"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Click Multiplier Upgrade"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:layout_below="@id/back"
        android:textStyle="bold"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/clickMultiplier"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Click Multiplier (0x) "
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:layout_below="@id/multiplierTitle"
        android:textSize="20dp" />

    <Button
        android:id="@+id/buyMultiplier"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:text="100"
        android:layout_alignParentRight="true"
        android:layout_below="@id/multiplierTitle"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/buildingTitle"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Building Upgrades"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:layout_below="@id/buyMultiplier"
        android:textStyle="bold"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/building1Upgrade"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Students Multiplier (0x) "
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:layout_below="@id/buildingTitle"
        android:textSize="20dp" />

    <Button
        android:id="@+id/buy1Upgrade"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:text="15"
        android:layout_alignParentRight="true"
        android:layout_below="@id/buildingTitle"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/building2Upgrade"
