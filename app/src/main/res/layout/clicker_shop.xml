        android:layout_height="50dp"
        android:layout_gravity="end"
        android:text="15"
        android:layout_alignParentRight="true"
        android:layout_below="@id/buy1Upgrade"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/building3Upgrade"
