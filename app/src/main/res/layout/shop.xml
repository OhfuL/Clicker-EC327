<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <TextView
        android:id="@+id/building3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buy1"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text="Upgrade 2 (0x) "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/building"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buy1"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text="Upgrade 2 (0x) "
        android:textSize="20dp" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 Dining Points"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/building1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Upgrade 1 (0x) "
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:layout_below="@id/back"
        android:textSize="20dp" />

    <Button
        android:id="@+id/buy1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="10"
        android:layout_alignParentRight="true"
        android:layout_below="@id/back"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/building2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Upgrade 2 (0x) "
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:layout_below="@id/buy1"
        android:textSize="20dp" />

    <Button
        android:id="@+id/buy2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="100"
        android:layout_alignParentRight="true"
        android:layout_below="@id/buy1"
        android:textSize="20dp" />

    <Button
        android:id="@+id/buy3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="15"
        android:layout_alignParentRight="true"
        android:layout_below="@id/buy2"
        android:textSize="20dp" />

</RelativeLayout>
